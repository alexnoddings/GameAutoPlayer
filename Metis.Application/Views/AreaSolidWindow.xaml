<Window x:Class="Metis.Application.Views.AreaSolidWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Metis.Application.Views"
        mc:Ignorable="d"
        d:DesignWidth="20" d:DesignHeight="20"
        WindowStyle="None" AllowsTransparency="True" BorderThickness="0" Background="Transparent"
        Title="Metis Area"
        ShowInTaskbar="False"
        Deactivated="AreaSolidWindow_OnDeactivated">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="Red" Opacity="0.5" />
        </Grid.Background>
    </Grid>
</Window>
